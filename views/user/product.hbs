{{#with danhsach.rows.[0]}}
    <div class="container product-container"> 
        <div class="row">
            <div class="col">
                <img src="/images/{{this.bookimg}}" alt="#">
            </div>
            <div class="col">
                <br>
                <div>
                    <h2 class="book-title">{{this.BookName}}</h2>
                <div>
                <br>
                <p><strong>Tác giả:</strong> {{this.Author}}</p>
                <p><strong>NXB:</strong> <a href="" id="publisher">{{this.Publisher}}</a> &nbsp; &nbsp; &nbsp; <strong>Thể loại:</strong> <a href="" id="type">{{this.Type}}</a></p>
                <p class="book-description-style">{{this.Description}}</p>
                <h3 class="price-style">{{this.Price}} đ</h3>
                <br>
                <div>
                    <div class="display-inline-block choose-number">
                        <p class="number-books-title">Số lượng: </p>
                        <input type="number" value="1" min="1" class="number-books">
                    </div>
                    <div class="display-inline-block">
                        <button class="buy-button">CHỌN MUA</button>
                    </div>
                </div>            
            </div>
        </div>

    </div>
    {{/with}}

    <script>
        function getPublisher(e){
            e.preventDefault();
            const publisher= document.getElementById("publisher").textContent;
            if(publisher === "Nhã Nam")
            {     
                window.location.replace("/shop/publisher=NXB-LaoDongNXB-NhaNam")
            }
            
            else if(publisher === "Nhà Xuất Bản Hội Nhà Văn")
            {     
                window.location.replace("/shop/publisher=NXB-HNV")
            }

            else if(publisher === "Nhà Xuất Bản Trẻ")
            {     
                window.location.replace("/shop/publisher=NXB-Tre")
            }

            else if(publisher === "Nhà Xuất Bản Lao Động")
            {     
                window.location.replace("/shop/publisher=NXB-LaoDong")
            }

            else if(publisher === "Nhà Xuất Bản Tổng hợp TP.HCM")
            {     
                window.location.replace("/shop/publisher=NXB-TH")
            }

             else if(publisher === "Nhà Xuất Bản Tri Thức")
            {     
                window.location.replace("/shop/publisher=NXB-TriThuc")
            }

            else if(publisher === "Nhà Xuất Bản Thế Giới")
            {     
                window.location.replace("/shop/publisher=NXB-TheGioi")
            }
        }

         function getType(e){
            e.preventDefault();
            const typeName= document.getElementById("type").textContent;
            console.log(typeName);
            if(typeName === "Tiểu thuyết")
            {     
                window.location.replace("/shop/type=TieuThuyet")
            }
            
            else if(typeName === "Tự truyện")
            {     
                window.location.replace("/shop/type=TuTruyen")
            }

            else if(typeName === "Văn học")
            {     
                window.location.replace("/shop/type=VanHoc")
            }
        }
        document.getElementById("publisher").onclick=getPublisher;

        document.getElementById("type").onclick=getType;
    </script>